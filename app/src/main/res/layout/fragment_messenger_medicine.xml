<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.crest.goyo.fragment.MessengerMedicine">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
<LinearLayout
    android:layout_weight="1"
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
   <TextView
       android:background="?selectableItemBackground"
       android:clickable="true"
       android:text="Order Medicines"
       android:gravity="center"
       android:drawableTop="@drawable/pills_main"
       android:layout_width="match_parent"
       android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:drawableTop="@drawable/injection"
            android:gravity="center"
            android:padding="5dp"
            android:text="Health and Wellness Products" />
    </android.support.v7.widget.CardView>
</LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.v7.widget.CardView
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:text="Medicine  Refills"
                    android:gravity="center"
                    android:drawableTop="@drawable/medicine_drug"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:text="Diagnostic Tests"
                    android:gravity="center"
                    android:drawableTop="@drawable/pill_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:gravity="center"
            android:text="A Valid Presciption Contains"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.v7.widget.CardView
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/doctor"
                    android:gravity="center"
                    android:text="Doctor Details"
                    android:textSize="10dp" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:textSize="10dp"
                    android:text="Date of Prescription"
                    android:gravity="center"
                    android:drawableTop="@drawable/calendar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:textSize="10dp"
                    android:text="Patient Details"
                    android:gravity="center"
                    android:drawableTop="@drawable/prescription"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:textSize="10dp"
                    android:text="Dosage Details"
                    android:gravity="center"
                    android:drawableTop="@drawable/pills"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.v7.widget.CardView>
        </LinearLayout>


        <TextView
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/motorcycle"
            android:gravity="center"
            android:text="Sit Tight! We've tons of features coming just for you!"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true" />

    </LinearLayout>
</FrameLayout>
